!==============================================================
! Project : 2.5D MHD solar atmosphere in bipolar magnetic field
! Aim     : serve as a basic model for solar applications
! Results :
! Update  : 10/02/2017
! configuration :
! $AMRVAC_DIR/setup.pl -d=2
!==============================================================

 &filelist
        base_filename='output/solar_atm_a'
        saveprim=.true.
        autoconvert=.false.
 
        restart_from_file='output/solar_atm_a0100.dat'
        snapshotnext=101
/ 
       convert=.true.

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
        dtsave_log=0.02d0
        dtsave_dat=0.02d0
 /

 &stoplist
        dtmin=1.D-7
        time_max= 50d0 !20.1d0
 /
        it_max=300
        time_reset=.true.

 &methodlist
        time_stepper=  'threestep'
        flux_scheme=    20*'hll'
        limiter= 20*'cada3'
        small_pressure=1.0d-8
        small_density=1.0d-14
        fix_small_values=.true.
 /

 &boundlist
        typeboundary_min1 = 'symm','symm','asymm','symm','symm','symm','asymm','symm'
        typeboundary_max1 = 'symm','symm','asymm','symm','symm','symm','asymm','symm'
        typeboundary_min2 = 8*'special'
        typeboundary_max2 = 8*'special'
 /

 &meshlist
        refine_criterion=3
        refine_max_level=5
        refine_threshold=20*0.2d0
        derefine_ratio=20*0.15d0
        w_refine_weight(1)=0.4d0
        w_refine_weight(6)=0.2d0
        w_refine_weight(7)=0.2d0
        w_refine_weight(8)=0.2d0
        block_nx1=12
        block_nx2=12
        domain_nx1=96
        domain_nx2=48
        iprob=2 !MLB
        xprobmin1=-10.d0
        xprobmax1=10.d0
        xprobmin2=0.d0
        xprobmax2=10.d0
        ditregrid=3
 /

 &paramlist
        typecourant='maxsum'
        courantpar=0.8d0
 /

 &mhd_list
        mhd_thermal_conduction=.true.
        mhd_radiative_cooling=.true.
        mhd_gravity=.true.
        typedivbfix='ct'
        Busr=60.d0
        B0field=.true.
        B0field_forcefree=.true. !NUEVO
        boundary_divbfix(3)=.false.
        mhd_eta=1.d-8
        mhd_trac=.true.
        mhd_trac_type=5
	 mhd_trac_mask=1.0
        mhd_internal_e=.true.
 /

 &tc_list
        tc_perpendicular=.false.
        tc_saturate=.true.
 /

 &rc_list
        ncool=12000
        coolcurve='Colgan_DM'
        coolmethod='exact'
        Tfix=.true.
        tlow=0.008d0
 /