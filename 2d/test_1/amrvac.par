!setup.pl -d=2

 &filelist
        base_filename='output/test_2d'  ! Base file name for dat/vtu output
        saveprim=.true.
        autoconvert=.false.
	convert_type='vtuBCCmpi'
/

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
        dtsave_log=5d-2          ! For the log
        dtsave_dat=5d-2         ! For dat/vtu output
 /

 &stoplist
        dtmin=1.0d-6
        time_max=1d0
 /

 &methodlist
        time_stepper=  'twostep'
        flux_scheme=20*'tvdlf'
        !limiter='cada3'
 /

 &boundlist
        typeboundary_min1 = 4*'cont'
        typeboundary_max1 = 4*'cont'
	typeboundary_min2 = 4*'cont'
        typeboundary_max2 = 4*'cont'
 /

 &meshlist
        refine_criterion=3
        refine_max_level=3
        domain_nx1=128
	domain_nx2=128
        xprobmin1=-1.0d0
        xprobmax1=9.0d0
	xprobmin2=-5.0d0
        xprobmax2=5.0d0
 /

 &paramlist
        !typecourant='maxsum'
        dtpar = -1
	courantpar=0.8d0
        slowsteps=-1
 /

 &hd_list
	hd_energy = .true.
	hd_gamma = 1.67d0
!	hd_particles = .true.
!	hd_thermal_conduction = .true.
!	hd_radiative_cooling = .true.
 /

