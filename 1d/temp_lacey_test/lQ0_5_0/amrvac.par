!setup.pl -d=1

 &filelist
        base_filename='output/heating_1d'  ! Base file name for dat/vtu output
        saveprim=.true.
        autoconvert=.false.
	convert_type='vtuBCCmpi'
	!restart_from_file='output/heating_1d0051.dat'
	!snapshotnext=52
/

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
        dtsave_log= 0.0003712923578163827!=10s          ! For the log
        dtsave_dat= 0.0003712923578163827!=10s For dat/vtu output
 /

 &stoplist
        dtmin=1.0d-12
        time_max = 0.1442 ! 0.03712923578163827
 /

 &methodlist
        time_stepper=  'threestep'
        flux_scheme=20*'tvdlf'
        limiter=20*'minmod'
	small_pressure=1.0d-8
        small_density=1.0d-14
        fix_small_values=.true.
	small_values_method = 'error'
 /

 &boundlist
        typeboundary_min1 = 3*'cont'
        typeboundary_max1 = 3*'cont'
 /

 &meshlist
        refine_criterion=3
        refine_max_level=4
	refine_threshold=20*0.2d0
        derefine_ratio=20*0.15d0
	!block_nx1=12
        domain_nx1 = 1024
	iprob=2
        xprobmin1=-0.3d0
        xprobmax1=0.3d0
	ditregrid=3
        !iprob=1
 /

 &paramlist
        typecourant= 'minimum' !'maxsum'
        !dtpar = -1
	courantpar=0.0005d0
        !slowsteps=-1
 /

 &hd_list
	hd_energy = .true.
	hd_gamma = 1.67d0
	!hd_particles = .true.
	hd_thermal_conduction = .true.
	hd_radiative_cooling = .false.
 /

 &tc_list
        tc_saturate=.false.
/

