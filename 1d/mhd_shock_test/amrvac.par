!setup.pl -d=1

 &filelist
        base_filename='output/th_mag_1d'  ! Base file name for dat/vtu output
        saveprim=.true.
        autoconvert=.false.
	convert_type='vtuBCCmpi'
/

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
        dtsave_log=0.2         ! For the log
        dtsave_dat=0.2         ! For dat/vtu output
 /

 &stoplist
        dtmin=1.0d-6
        time_max=30d0
 /

 &methodlist
        time_stepper=  'twostep'
        flux_scheme=20*'tvdlf'
        !limiter='cada3'
 /

 &boundlist
        typeboundary_min1 = 8*'cont'
        typeboundary_max1 = 8*'cont'
 /

 &meshlist
        refine_criterion=3
        refine_max_level=3
        domain_nx1=512
        xprobmin1=-10.0d0
        xprobmax1=140.0d0
        !iprob=1
 /

 &paramlist
        !typecourant='maxsum'
        dtpar = -1
	courantpar=0.8d0
        slowsteps=-1
 /

